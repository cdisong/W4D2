
<% if action == :new %>
<% action_url = cats_url %>
<% elsif action == :edit %>
<% action_url = cat_url %>
<% end %>


<form action= "<%= action_url %>" method="post">
  <% if action == :edit %>
    <input type="hidden" name="_method" value="PATCH">
  <% end %>
  <label for="name">Name</label>
  <input id="name" type="text" name="cat[name]" value='<%= cat.name %>'/>
  <br>
  <br>
  <% Cat::SEX.each do |sex| %>
    <input type="radio" name="cat[sex]" value="<%= sex %>" <%= sex == cat.sex ? 'checked' : '' %> > <%= sex %>
  <% end %>
  <br>

  <select name="cat[color]">
    <option disabled selected> --select a color-- </option>
    <% Cat::COLORS.each do |color| %>
      <option value="<%= color %>" <%= color == cat.color ? 'selected' : '' %> ><%= color %></option>
    <% end %>
  </select>
  <br>
  <br>
  <input type="date" name="cat[birth_date]" value="<%=cat.birth_date%>" />
  <br>
  <br>

  <label for="description">Description</label></br>
  <textarea id= "description" name="cat[description]"> <%=cat.description%> </textarea>
  <br>
  <br>
  <input type="submit" value="SAVE CAT"/>



</form>
